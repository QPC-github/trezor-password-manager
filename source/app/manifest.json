{
  "name": "TREZOR Password",
  "description": "Keezor",
  "version": "0.0.1",
  "author": "SatoshiLabs",
  "short_name": "TREZOR Password",

  "manifest_version": 2,

  "browser_action": {
    "default_icon": {  
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "TREZOR Password",
    "default_popup": "index.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script.js"]
    }
  ],

  "background": {
    "scripts": ["js/dropbox.min.js", "background.js"]
  },
  "web_accessible_resources": [
    "html/chrome_oauth_receiver.html"
  ],
  "permissions": ["tabs", "identity"]

}
